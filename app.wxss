/**app.wxss**/
.bg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  animation: bg 5s infinite;
}

@keyframes bg {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.5);
  }

  100% {
    transform: scale(1);
  }
}