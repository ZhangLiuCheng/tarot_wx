.container {
  width: 100vw;
  height: 100vh;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 40rpx;
  margin-top: 50rpx;
  color:#FFF;
}

/* ==========首页========== */

.body_main {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.info {
  width: 92%;
  margin-left: 4%;
  margin-top: 200rpx;
}

.info_txt1 {
  font-size: 32rpx;
  color: white;
}

.btn_start {
  margin-bottom: 228rpx;
}

/* ==========选择方法========== */

.body_way {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.way_txt {
  font-size: 30rpx;
  color: white;
  margin-top: 30rpx;
  width: 97%;
  text-align: center;
}

.btn_way_yy {
  width: 60%;
  margin-top: 280rpx;
}

.btn_way_lr {
