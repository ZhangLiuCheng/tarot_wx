/* pages/lover/lover.wxss */

.info_txt {
  width: 92%;
  margin-left: 4%;
  margin-top: 16rpx;
  font-size: 32rpx;
  color: #fff;
}

.pai {
  width: 90%;
  height: 700rpx;
  margin-left: 5%;
  margin-top: 60rpx;
  position: relative;
}

.item {
  width: 180rpx;
  display: flex;
  flex-direction: column;
}

.item_img {
  width: 100%;
  height: 220rpx;
  border:2rpx solid white;
}

.item_txt {
  width: 100%;
  margin-top: 10rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
  color: #fff;
}

.i1 {
  position: absolute;
  left: 50%;
  transform: translateX(-50%)
}

.i2 {
  position: absolute;
  top: 350rpx;
  left: 0rpx;
}

.i3 {
  position: absolute;
  top: 350rpx;
  left: 50%;
  transform: translateX(-50%)
}

.i4 {
  position: absolute;
  right: 0rpx;
  top: 350rpx;
}

.btn_start {
  width: 60%;
  margin-top: 100rpx;
}